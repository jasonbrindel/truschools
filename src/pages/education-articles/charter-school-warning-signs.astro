const title = "When the Promise Fades: Warning Signs Every Parent Should Recognize Before Choosing a Charter School";
const description = "A research-informed guide to spotting red flags—not to discourage choice, but to make it wiser.";
const publishDate = "2024-08-16";
const tags = ['Charter Schools', 'School Choice'];

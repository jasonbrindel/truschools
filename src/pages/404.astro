---
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Page Not Found" noIndex={true}>
  <div class="container py-20 text-center">
    <h1 class="text-[60px] text-brand-blue mb-4">404</h1>
    <h2 class="text-2xl mb-4">Page Not Found</h2>
    <p class="mb-8">
      Sorry, the page you are looking for doesn't exist or has been moved.
    </p>
    <div class="flex justify-center gap-4">
      <a href="/" class="btn-blue">Go to Homepage</a>
      <a href="/search" class="btn-green">Search Schools</a>
    </div>
  </div>
</Layout>

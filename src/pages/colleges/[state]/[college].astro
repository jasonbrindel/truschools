                    <tr class="border-b border-gray-100">
                      <td class="py-2 text-gray-600">Black</td>
                      <td class="py-2 font-medium">{formatPercent(collegeData.pct_black)}</td>
                    </tr>
                  )}
                  {collegeData.pct_hispanic !== null && (
                    <tr class="border-b border-gray-100">
                      <td class="py-2 text-gray-600">Hispanic</td>
                      <td class="py-2 font-medium">{formatPercent(collegeData.pct_hispanic)}</td>
                    </tr>

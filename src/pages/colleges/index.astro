<Layout title="Colleges & Universities in the United States" description="Find colleges and universities across the United States. Browse comprehensive listings of public and private higher education institutions by state.">
  <div class="container py-5">
    <!-- Breadcrumb -->
    <nav class="text-sm mb-4">
      <ol class="flex flex-wrap items-center gap-2 text-gray-600">
        <li><a href="/" class="hover:text-brand-blue">Home</a></li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-900 font-medium">Colleges & Universities</li>
      </ol>
    </nav>

    <h1 class="text-brand-green-text mb-2">Colleges & Universities in the United States</h1>
    <p class="fs-14 text-gray-500 mb-5">Find the right college or university for your higher education journey.</p>

    <div class="flex flex-col lg:flex-row gap-5">
      <!-- Main Content -->
      <div class="lg:w-2/3">
        <!-- Featured Article -->
        <div class="box-rounded mb-5">
          <div class="flex flex-col md:flex-row gap-4">
            <div class="md:w-1/3">
              <img
                src={featuredImage.src}
                alt="College campus"
                class="w-full aspect-video object-cover rounded"
              />
            </div>
            <div class="md:w-2/3">
              <h2 class="text-brand-blue text-xl mb-2">
                <a href="#" class="hover:underline">Tips to Choosing a College Success Coach</a>
              </h2>
              <p class="text-gray-600 fs-14">
                A college success coach can help you navigate the admissions process and make the most
                of your college experience. Learn how to find the right coach for you.
              </p>
            </div>
          </div>
        </div>

        <!-- Topic Categories -->
        <div class="box-rounded mb-5">
          <h2 class="text-brand-blue text-xl mb-4">College & University Topics</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {topics.map((topic) => (
              <div class="border border-gray-200 rounded overflow-hidden">
                <img
                  src={topic.image.src}
                  alt={topic.title}
                  class="w-full aspect-square object-cover"
                />
                <div class="p-4">
                  <h3 class="text-brand-green-text font-bold mb-2 fs-14">{topic.title}</h3>
                  <ul class="space-y-1 fs-13">
                    {topic.articles.map((article) => (
                      <li>
                        <a href={article.url} class="text-brand-blue hover:underline">{article.title}</a>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Q&A Section -->
        <div class="box-rounded mb-5 bg-lt-blue">
          <h2 class="text-brand-blue text-lg mb-3">College Q&A</h2>
          <p class="text-gray-700 fs-14 mb-3">
            <strong>Question:</strong> Should freshmen have a curfew?
          </p>
          <div class="flex gap-2 flex-wrap">
            <button class="px-3 py-1 bg-white border border-gray-300 rounded text-sm hover:bg-gray-50">Yes, definitely</button>
            <button class="px-3 py-1 bg-white border border-gray-300 rounded text-sm hover:bg-gray-50">Only first semester</button>
            <button class="px-3 py-1 bg-white border border-gray-300 rounded text-sm hover:bg-gray-50">No curfew needed</button>
            <button class="px-3 py-1 bg-white border border-gray-300 rounded text-sm hover:bg-gray-50">Depends on the student</button>
          </div>
        </div>

        <!-- Browse by State -->
        <div class="box-rounded mb-5">
          <h2 class="text-brand-blue mb-4">Browse Colleges by State</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-0">
            {states.map((state, index) => (
              <div class={`p-3 ${index < states.length - 3 ? 'border-b border-dotted border-[#c1c1c1]' : ''}`}>
                <a href={`/colleges/${state.slug}`} class="flex items-center gap-2">
                  <span class="text-brand-blue font-bold">{state.abbr}</span>
                  <span>{state.name}</span>
                </a>
              </div>
            ))}
          </div>
        </div>

        <!-- Browse by City -->
        <div class="box-rounded mb-5">
          <h2 class="text-brand-blue mb-4">Colleges by City</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-2 fs-13">
            {majorCities.map((city) => (
              <a href={`/colleges/${city.state}/${slugify(city.name)}`} class="text-brand-blue hover:underline">
                {city.name}
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:w-1/3">
        <div class="box-rounded bg-lt-blue mb-4">
          <h3 class="text-brand-blue mb-3">Quick Jump</h3>
          <select
            class="input w-full"
            onchange="if(this.value) window.location.href=this.value"
          >
            <option value="">-- Select a State --</option>
            {states.map((state) => (
              <option value={`/colleges/${state.slug}`}>
                {state.name} Colleges
              </option>
            ))}
          </select>
        </div>

        <!-- Ad Placeholder -->
        <div class="box-rounded mb-4">
          <div class="bg-gray-100 h-[280px] flex items-center justify-center text-gray-400 fs-13">
            Advertisement
          </div>
        </div>

        <div class="box-rounded mb-4">
          <h3 class="text-brand-blue mb-3">K-12 Schools</h3>
          <ul class="list-none m-0 p-0 fs-13">
            <li class="py-2 border-b border-dotted border-[#c1c1c1]">
              <a href="/preschools">Preschools</a>
            </li>
            <li class="py-2 border-b border-dotted border-[#c1c1c1]">
              <a href="/kindergartens">Kindergartens</a>
            </li>
            <li class="py-2 border-b border-dotted border-[#c1c1c1]">
              <a href="/elementary-schools">Elementary Schools</a>
            </li>
            <li class="py-2 border-b border-dotted border-[#c1c1c1]">
              <a href="/middle-schools">Middle Schools</a>
            </li>
            <li class="py-2">
              <a href="/high-schools">High Schools</a>
            </li>
          </ul>
        </div>

        <!-- Newsletter Signup -->
        <div class="box-rounded">
          <h3 class="text-brand-blue mb-3">Newsletter Signup</h3>
          <p class="fs-13 text-gray-600 mb-3">Get college admissions tips and financial aid news delivered to your inbox.</p>
          <input type="email" placeholder="Your email address" class="input w-full mb-2" />
          <button class="btn btn-primary w-full">Subscribe</button>
        </div>
      </div>
    </div>
  </div>
</Layout>

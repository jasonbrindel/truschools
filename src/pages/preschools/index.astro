          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <!-- Featured Article Cards -->
            {featuredArticles.map((article) => (
              <div class="border border-gray-200 rounded overflow-hidden p-4">

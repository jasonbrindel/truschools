<Layout title="Preschools in the United States" description="Find preschools across the United States. Browse comprehensive listings of public and private preschools by state.">
  <div class="container py-5">
    <!-- Breadcrumb -->
    <nav class="text-sm mb-4">
      <ol class="flex flex-wrap items-center gap-2 text-gray-600">
        <li><a href="/" class="hover:text-brand-blue">Home</a></li>
        <li class="text-gray-400">/</li>
        <li class="text-gray-900 font-medium">Preschools</li>
      </ol>
    </nav>

    <h1 class="text-brand-green-text mb-2">Preschools in the United States</h1>
    <p class="fs-14 text-gray-500 mb-5">Find preschools and early childhood education programs across the country.</p>

    <div class="flex flex-col lg:flex-row gap-5">
      <!-- Main Content -->
      <div class="lg:w-2/3">
        <!-- Featured Article -->
        <div class="box-rounded mb-5">
          <div class="flex flex-col md:flex-row gap-4">
            <div class="md:w-1/3">
              <img
                src={featuredImage.src}
                alt="Preschool child"
                class="w-full aspect-video object-cover rounded"
              />
            </div>
            <div class="md:w-2/3">
              <h2 class="text-brand-blue text-xl mb-2">
                <a href="#" class="hover:underline">Discover Fun Activities for Kids</a>
              </h2>
              <p class="text-gray-600 fs-14">
                Looking for ways to keep your preschooler engaged and learning? Explore our collection of
                fun, educational activities perfect for young children.
              </p>
            </div>
          </div>
        </div>

        <!-- Topic Categories -->
        <div class="box-rounded mb-5">
          <h2 class="text-brand-blue text-xl mb-4">Preschool Topics</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {topics.map((topic) => (
              <div class="border border-gray-200 rounded overflow-hidden">
                <img
                  src={topic.image.src}
                  alt={topic.title}
                  class="w-full aspect-square object-cover"
                />
                <div class="p-4">
                  <h3 class="text-brand-green-text font-bold mb-2 fs-14">{topic.title}</h3>
                  <ul class="space-y-1 fs-13">
                    {topic.articles.map((article) => (
                      <li>
                        <a href={article.url} class="text-brand-blue hover:underline">{article.title}</a>
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Q&A Section -->
        <div class="box-rounded mb-5 bg-lt-blue">
          <h2 class="text-brand-blue text-lg mb-3">Preschool Q&A</h2>
          <p class="text-gray-700 fs-14 mb-3">
            <strong>Question:</strong> What do you look for when choosing a preschool for your child?
          </p>
          <div class="flex gap-2 flex-wrap">
            <button class="px-3 py-1 bg-white border border-gray-300 rounded text-sm hover:bg-gray-50">Location</button>
            <button class="px-3 py-1 bg-white border border-gray-300 rounded text-sm hover:bg-gray-50">Curriculum</button>
            <button class="px-3 py-1 bg-white border border-gray-300 rounded text-sm hover:bg-gray-50">Cost</button>
            <button class="px-3 py-1 bg-white border border-gray-300 rounded text-sm hover:bg-gray-50">Teacher Quality</button>
          </div>
        </div>

        <!-- Browse by State -->
        <div class="box-rounded mb-5">
          <h2 class="text-brand-blue mb-4">Browse Preschools by State</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-0">
            {states.map((state, index) => (
              <div class={`p-3 ${index < states.length - 3 ? 'border-b border-dotted border-[#c1c1c1]' : ''}`}>
                <a href={`/preschools/${state.slug}`} class="flex items-center gap-2">
                  <span class="text-brand-blue font-bold">{state.abbr}</span>
                  <span>{state.name}</span>
                </a>
              </div>
            ))}
          </div>
        </div>

        <!-- Browse by City -->
        <div class="box-rounded mb-5">
          <h2 class="text-brand-blue mb-4">Preschools by City</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-2 fs-13">
            {majorCities.map((city) => (
              <a href={`/preschools/${city.state}/${slugify(city.name)}`} class="text-brand-blue hover:underline">
                {city.name}
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:w-1/3">
        <div class="box-rounded bg-lt-blue mb-4">
          <h3 class="text-brand-blue mb-3">Quick Jump</h3>
          <select
            class="input w-full"
            onchange="if(this.value) window.location.href=this.value"
          >
            <option value="">-- Select a State --</option>
            {states.map((state) => (
              <option value={`/preschools/${state.slug}`}>
                {state.name} Preschools
              </option>
            ))}
          </select>
        </div>

        <!-- Ad Placeholder -->
        <div class="box-rounded mb-4">
          <div class="bg-gray-100 h-[280px] flex items-center justify-center text-gray-400 fs-13">
            Advertisement
          </div>
        </div>

        <div class="box-rounded mb-4">
          <h3 class="text-brand-blue mb-3">Other School Types</h3>
          <ul class="list-none m-0 p-0 fs-13">
            <li class="py-2 border-b border-dotted border-[#c1c1c1]">
              <a href="/kindergartens">Kindergartens</a>
            </li>
            <li class="py-2 border-b border-dotted border-[#c1c1c1]">
              <a href="/elementary-schools">Elementary Schools</a>
            </li>
            <li class="py-2 border-b border-dotted border-[#c1c1c1]">
              <a href="/middle-schools">Middle Schools</a>
            </li>
            <li class="py-2 border-b border-dotted border-[#c1c1c1]">
              <a href="/high-schools">High Schools</a>
            </li>
            <li class="py-2">
              <a href="/colleges">Colleges & Universities</a>
            </li>
          </ul>
        </div>

        <!-- Newsletter Signup -->
        <div class="box-rounded">
          <h3 class="text-brand-blue mb-3">Newsletter Signup</h3>
          <p class="fs-13 text-gray-600 mb-3">Get the latest preschool news and tips delivered to your inbox.</p>
          <input type="email" placeholder="Your email address" class="input w-full mb-2" />
          <button class="btn btn-primary w-full">Subscribe</button>
        </div>
      </div>
    </div>
  </div>
</Layout>

                  <h3 class="text-brand-green-text font-bold mb-1 fs-14">
                    <a href={article.url} class="hover:underline">{article.title}</a>
                  </h3>
                  <p class="text-gray-600 fs-12 mb-2 leading-snug">{article.description}</p>
                  <a href={article.url} class="text-brand-blue hover:underline fs-13">Read article &rarr;</a>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Q&A Section -->
        <div class="box-rounded mb-5 bg-lt-blue">
          <QAPoll
            questionId="schools-important-factor"
            pageSlug="schools"
            question="What's most important when choosing a school?"
            answers={["Academic quality", "Location", "Class size", "Extracurriculars"]}
          />
        </div>

        <!-- Browse by School Type -->
        <div class="box-rounded mb-5">
          <h2 class="text-brand-blue mb-4">Browse by School Type</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-3">
            {schoolTypes.map((type) => (
              <a href={`/${type.slug}`} class="block p-4 border border-gray-200 rounded text-center hover:border-brand-blue hover:bg-gray-50 transition-colors">
                <span class="text-brand-blue font-medium">{type.name}</span>
              </a>
            ))}
          </div>
        </div>

        <!-- Browse by State -->
        <div class="box-rounded mb-5">
          <h2 class="text-brand-blue mb-4">Browse Schools by State</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-0">
            {states.map((state, index) => (
              <div class={`p-3 ${index < states.length - 3 ? 'border-b border-dotted border-[#c1c1c1]' : ''}`}>
                <a href={`/schools/${state.slug}`} class="flex items-center gap-2">
                  <span class="text-brand-blue font-bold">{state.abbr}</span>
                  <span>{state.name}</span>
                </a>
              </div>
            ))}
          </div>
        </div>

        <!-- Browse by City -->
        <div class="box-rounded mb-5">
          <h2 class="text-brand-blue mb-4">Schools by City</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-2 fs-13">
            {majorCities.map((city) => (
              <a href={`/schools/${city.state}/${slugify(city.name)}`} class="text-brand-blue hover:underline">
                {city.name}
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:w-1/3">
        <QuickJumpStates baseUrl="/schools" schoolType="schools" />


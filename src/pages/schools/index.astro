<Layout title="K-12 Schools in the United States" description="Find K-12 schools across the United States. Browse comprehensive listings of preschools, kindergartens, elementary, middle, and high schools by state.">
  <div class="container">
    <!-- Breadcrumb -->
    <nav class="breadcrumb py-3">
      <a href="/">Home</a>
      <span class="breadcrumb-separator">&gt;</span>
      <span>K-12 Schools</span>
    </nav>

    <h1 class="text-brand-green-text mb-2">K-12 Schools in the United States</h1>
    <p class="fs-14 text-gray-500 mb-5">Find the right school for your child at every stage of their education.</p>
  </div>

  <div class="container py-5">
    <div class="flex flex-col lg:flex-row gap-5">
      <!-- Main Content -->
      <div class="lg:w-2/3">
        <!-- Featured Article -->
        <div class="box-rounded mb-5">
          <div class="flex flex-col md:flex-row gap-4">
            <div class="md:w-1/3">
              <div class="bg-gray-200 aspect-video rounded flex items-center justify-center text-gray-400">
                Featured Image
              </div>
            </div>
            <div class="md:w-2/3">
              <h2 class="text-brand-blue text-xl mb-2">
                <a href="#" class="hover:underline">Finding & Evaluating Schools for Your Child</a>
              </h2>
              <p class="text-gray-600 fs-14">
                Choosing the right school is one of the most important decisions you'll make for your child.
                Learn how to evaluate schools and find the perfect fit for your family.
              </p>
            </div>
          </div>
        </div>

        <!-- Topic Categories -->
        <div class="box-rounded mb-5">
          <h2 class="text-brand-blue text-xl mb-4">K-12 Education Topics</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {topics.map((topic) => (
              <div class="border border-gray-200 rounded p-4">
                <h3 class="text-brand-green-text font-bold mb-2 fs-14">{topic.title}</h3>
                <ul class="space-y-1 fs-13">
                  {topic.articles.map((article) => (
                    <li>
                      <a href={article.url} class="text-brand-blue hover:underline">{article.title}</a>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </div>

        <!-- Q&A Section -->
        <div class="box-rounded mb-5 bg-lt-blue">
          <h2 class="text-brand-blue text-lg mb-3">Education Q&A</h2>
          <p class="text-gray-700 fs-14 mb-3">
            <strong>Question:</strong> What's most important when choosing a school?
          </p>
          <div class="flex gap-2 flex-wrap">
            <button class="px-3 py-1 bg-white border border-gray-300 rounded text-sm hover:bg-gray-50">Academic quality</button>
            <button class="px-3 py-1 bg-white border border-gray-300 rounded text-sm hover:bg-gray-50">Location</button>
            <button class="px-3 py-1 bg-white border border-gray-300 rounded text-sm hover:bg-gray-50">Class size</button>
            <button class="px-3 py-1 bg-white border border-gray-300 rounded text-sm hover:bg-gray-50">Extracurriculars</button>
          </div>
        </div>

        <!-- Browse by School Type -->
        <div class="box-rounded mb-5">
          <h2 class="text-brand-blue mb-4">Browse by School Type</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-3">
            {schoolTypes.map((type) => (
              <a href={`/${type.slug}`} class="block p-4 border border-gray-200 rounded text-center hover:border-brand-blue hover:bg-gray-50 transition-colors">
                <span class="text-brand-blue font-medium">{type.name}</span>
              </a>
            ))}
          </div>
        </div>

        <!-- Browse by State -->
        <div class="box-rounded mb-5">
          <h2 class="text-brand-blue mb-4">Browse Schools by State</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-0">
            {states.map((state, index) => (
              <div class={`p-3 ${index < states.length - 3 ? 'border-b border-dotted border-[#c1c1c1]' : ''}`}>
                <a href={`/schools/${state.slug}`} class="flex items-center gap-2">
                  <span class="text-brand-blue font-bold">{state.abbr}</span>
                  <span>{state.name}</span>
                </a>
              </div>
            ))}
          </div>
        </div>

        <!-- Browse by City -->
        <div class="box-rounded mb-5">
          <h2 class="text-brand-blue mb-4">Schools by City</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-2 fs-13">
            {majorCities.map((city) => (
              <a href={`/schools/${city.state}/${slugify(city.name)}`} class="text-brand-blue hover:underline">
                {city.name}
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="lg:w-1/3">
        <div class="box-rounded bg-lt-blue mb-4">
          <h3 class="text-brand-blue mb-3">Quick Jump</h3>
          <select
            class="input w-full"
            onchange="if(this.value) window.location.href=this.value"
          >
            <option value="">-- Select a State --</option>
            {states.map((state) => (
              <option value={`/schools/${state.slug}`}>
                {state.name} Schools
              </option>
            ))}
          </select>
        </div>

        <!-- Ad Placeholder -->
        <div class="box-rounded mb-4">
          <div class="bg-gray-100 h-[280px] flex items-center justify-center text-gray-400 fs-13">
            Advertisement
          </div>
        </div>

        <div class="box-rounded mb-4">
          <h3 class="text-brand-blue mb-3">School Types</h3>
          <ul class="list-none m-0 p-0 fs-13">
            <li class="py-2 border-b border-dotted border-[#c1c1c1]">
              <a href="/preschools">Preschools</a>
            </li>
            <li class="py-2 border-b border-dotted border-[#c1c1c1]">
              <a href="/kindergartens">Kindergartens</a>
            </li>
            <li class="py-2 border-b border-dotted border-[#c1c1c1]">
              <a href="/elementary-schools">Elementary Schools</a>
            </li>
            <li class="py-2 border-b border-dotted border-[#c1c1c1]">
              <a href="/middle-schools">Middle Schools</a>
            </li>
            <li class="py-2 border-b border-dotted border-[#c1c1c1]">
              <a href="/high-schools">High Schools</a>
            </li>
            <li class="py-2">
              <a href="/colleges">Colleges & Universities</a>
            </li>
          </ul>
        </div>

        <!-- Newsletter Signup -->
        <div class="box-rounded">
          <h3 class="text-brand-blue mb-3">Newsletter Signup</h3>
          <p class="fs-13 text-gray-600 mb-3">Get the latest education news and tips delivered to your inbox.</p>
          <input type="email" placeholder="Your email address" class="input w-full mb-2" />
          <button class="btn btn-primary w-full">Subscribe</button>
        </div>
      </div>
    </div>
  </div>
</Layout>

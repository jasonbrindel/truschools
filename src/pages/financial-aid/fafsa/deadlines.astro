                <th class="text-left p-4 font-semibold text-gray-700">Notes</th>
              </tr>
            </thead>
            <tbody>
              {stateDeadlines.map((state, index) => (
                <tr id={`state-${state.abbr}`} class={index % 2 === 0 ? 'bg-white' : 'bg-gray-50'}>
                  <td class="p-4 font-medium">
                    {state.url ? (
                      <a href={state.url} target="_blank" rel="noopener" class="text-brand-blue hover:underline">
                        {state.state}
                      </a>
                    ) : (
                      state.state
                    )}
